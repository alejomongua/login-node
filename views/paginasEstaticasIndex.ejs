<% layout('layout') -%>
<h1 class="titulo"><%= titulo %></h1>
<div class="row">
  <div class="col-lg-offset-2 col-12 col-lg-7">
    <form accept-charset="UTF-8" action="/sesiones" method="post">
        <div class="row">
          <div class="col-6 col-lg-4 marca">
            Correo electrónico:
          </div>
          <div class="col-6 col-lg-3">
            <input id="sesion_email" name="sesion[email]" size="30" type="text">
          </div>
        </div>
        <div class="row">
          <div class="col-6 col-lg-4 marca">
            Password:
          </div>
          <div class="col-6 col-lg-3">
            <input id="sesion_password" name="sesion[password]" size="30" type="password">
          </div>
        </div>
        <div class="row">
          <div class="col-lg-offset-2 col-12 col-lg-7">
            <input id="sesion_recordar" name="sesion[recordar]" type="checkbox" value="si"> Recuerdame
          </div>
        </div>
        <div class="row">
          <div class="col-lg-offset-2 col-12 col-lg-7">
            <a href="/olvide_password">¿Olvidó su contraseña?</a>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 col-12" style="text-align:center;padding:20px">
            <button class="btn btn-large btn-info" type="submit">Ingresar</button>
          </div>
        </div>
    </form>
  </div>
</div>
