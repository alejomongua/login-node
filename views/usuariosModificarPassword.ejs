<% layout('layout') -%>
<% block('navbar', partial('_navbar', {usuario_actual: usuario_actual})) %>
<div class="row">
  <div class="col-lg-offset-2 col-12 col-lg-7">
    <form accept-charset="UTF-8" action="/usuarios/<%= id %>" method="post">
      <input type="hidden" name="_method" value="put">
      <div class="row">
        <div class="col-xs-12 col-lg-4 marca">
          Contraseña:
        </div>
        <div class="col-xs-12 col-lg-3">
          <input id="usuario_password" name="usuario[password]" size="30" type="password">
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-lg-4 marca">
          Confirmar contraseña:
        </div>
        <div class="col-xs-12 col-lg-3">
          <input id="usuario_password_confirm" name="usuario[password_confirm]" size="30" type="password">
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6 col-xs-12" style="text-align:center;padding:20px">
          <button class="btn btn-large btn-info" type="submit">Enviar</button>
        </div>
      </div>
    </form>
  </div>
</div>
